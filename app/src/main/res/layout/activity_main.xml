<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_span="4"
            android:text="0"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/text_size"
            android:textIsSelectable="false"
            android:textColor="@color/textColor"
            android:gravity="right"
            android:textAlignment="gravity"/>

    </TableRow>


    <TableRow
        android:id="@+id/tableRow2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/tableRow1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="C"
            android:id="@+id/clear"
            android:layout_below="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="clearButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="CE"
            android:id="@+id/clear_everything"
            android:layout_below="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="clearEverythingButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="+/-"
            android:id="@+id/pos_neg"
            android:layout_below="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="posNegButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="/"
            android:id="@+id/divide"
            android:layout_below="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="divideButton" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/tableRow2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="7"
            android:id="@+id/seven"
            android:layout_below="@+id/tableRow2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="sevenButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="8"
            android:id="@+id/eight"
            android:layout_below="@+id/tableRow2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="eightButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="9"
            android:id="@+id/nine"
            android:layout_below="@+id/tableRow2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="nineButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="+"
            android:id="@+id/plus"
            android:layout_below="@+id/tableRow2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="plusButton" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/tableRow3">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="4"
            android:id="@+id/four"
            android:layout_below="@+id/tableRow3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="fourButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="5"
            android:id="@+id/five"
            android:layout_below="@+id/tableRow3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="fiveButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="6"
            android:id="@+id/six"
            android:layout_below="@+id/tableRow3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="sixButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="-"
            android:id="@+id/minus"
            android:layout_below="@+id/tableRow3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="minusButton" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/tableRow4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="1"
            android:id="@+id/one"
            android:layout_below="@+id/tableRow4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="oneButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="2"
            android:id="@+id/two"
            android:layout_below="@+id/tableRow4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="twoButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="3"
            android:id="@+id/three"
            android:layout_below="@+id/tableRow4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="threeButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_span="1"
            android:text="*"
            android:id="@+id/multiply"
            android:layout_below="@+id/tableRow4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="multiplyButton" />

    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/tableRow5">

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:layout_span="1"
            android:text="0"
            android:id="@+id/zero"
            android:layout_below="@+id/tableRow5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="zeroButton" />

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:layout_span="2"
            android:text="."
            android:id="@+id/decimal"
            android:layout_below="@+id/tableRow5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="decimalButton" />

        <Button
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:layout_span="1"
            android:text="="
            android:id="@+id/equals"
            android:layout_below="@+id/tableRow5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:typeface="sans"
            android:textSize="@dimen/text_size"
            android:onClick="equalsButton" />



    </TableRow>

</RelativeLayout>
